# Configurações do servidor
PORT=3001

# Configurações de segurança
# IMPORTANTE: Gere uma chave forte e única para produção
# Exemplo: openssl rand -base64 32
JWT_SECRET=sua_chave_secreta_super_forte_aqui_min_32_caracteres

# CORS - Origens permitidas (separadas por vírgula)
CORS_ORIGIN=http://localhost:3001,http://127.0.0.1:3001,https://cfm-estoque.com

# Logging
LOG_LEVEL=info

# ELK Stack (Elasticsearch, Logstash, Kibana)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_AUTH=false
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=changeme
KIBANA_URL=http://localhost:5601

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
LOGIN_LIMIT_MAX=5
REPORT_LIMIT_MAX=10

# Configurações do banco de dados
NODE_ENV=development

# Configurações de Alertas por Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app
ALERT_EMAIL=admin@empresa.com